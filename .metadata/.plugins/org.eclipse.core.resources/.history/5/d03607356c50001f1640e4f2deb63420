package test.controller;

import java.util.Scanner;

public class TEST {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		while(true) {

			System.out.println("입력 : ");
			String str = sc.next();

			if(str.equals("exit")){
				break;
			}
			else {
				System.out.println("개수 : " + str.length());
			}
		}
	}
}
