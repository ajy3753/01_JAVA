	public void fileSave(String file, StringBuilder sb) {
		// 매개변수로 넘어온 sb를 String으로 바꿔, fd의 fileSave() 메소드 매개변수로 file과 String을 넘김
		FileWriter fw = new FileWriter("char_test.txt");
	}
	
	public StringBuilder fileOpen(String file) {
